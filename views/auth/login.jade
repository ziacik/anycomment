extends ../layout

block body
	.container
		.row
			.main
				h3
					| Prihláste sa, alebo
					a(href="register")
						| &nbsp;zaregistrujte

				.row
					each provider, code in providers
						if provider.name
							.col-md-6.top-margin-10
								a(class="btn btn-block btn-social btn-" + code, href="/auth/" + provider.slug, role="button")
									i(class="fa fa-" + code)
									= ' ' + provider.name
							
				.login-or
					hr.hr-or
					span.span-or alebo
	
				form(role="form", action="/auth/local", method="post")
					.form-group
						input.form-control(type="text", name="identifier", placeholder="Meno alebo e-mail")
					.form-group
						input.form-control(type="password", name="password", placeholder="Heslo")
					
					if errors
						each error in errors					
							.alert.alert-danger.alert-dismissible(role="alert")
								button.close(type="button", aria-label="Close", data-dismiss="alert")
									span(aria-hidden="true") &times;
								= __(error)
					
					.checkbox.pull-right
						label
							input(type="checkbox")
							| Zapamätať

					button.btn.btn-primary(type="submit")
						| Prihlásiť sa
						
						